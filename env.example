# Configurações da Aplicação
APP_ENV=development
APP_DEBUG=true
APP_NAME="Sistema de Gerenciamento de Alunos"
APP_VERSION=2.0.0

# Configurações do Banco de Dados
DB_PATH=database/banco.sqlite
DB_TEST_PATH=database/banco-teste.sqlite

# Configurações de Cache
CACHE_TTL=3600

# Configurações de Log
LOG_LEVEL=INFO

# Configurações da API
API_RATE_LIMIT=100
CORS_ALLOW_ORIGIN=*

# Configurações de Paginação
PAGINATION_LIMIT=10

