# Configurações do Sistema de Gerenciamento de Alunos
# Copie este arquivo para .env e configure conforme necessário

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
# Em produção (Hostinger), use as variáveis do MySQL abaixo
# Em desenvolvimento local, o sistema usará automaticamente o banco SQLite (database/banco.sqlite)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=u474727782_spga
DB_USERNAME=u474727782_spga
DB_PASSWORD=********

# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
# APP_ENV=production para Hostinger (usa MySQL)
# APP_ENV=development para desenvolvimento local (usa SQLite)
APP_NAME="Sistema de Gerenciamento de Alunos"
APP_ENV=development
APP_DEBUG=false
APP_URL=wesleystoss.com.br
APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
APP_KEY=base64:your-random-key-here
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ========================================
# CONFIGURAÇÕES DE CACHE
# ========================================
CACHE_DRIVER=file
CACHE_ENABLED=true
CACHE_TTL=3600

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_MAX_FILES=30

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# CONFIGURAÇÕES DE API
# ========================================
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=60
API_VERSION=v1

# ========================================
# CONFIGURAÇÕES DE SERVIÇOS EXTERNOS
# ========================================
CEP_SERVICE_URL=https://viacep.com.br/ws
CEP_SERVICE_TIMEOUT=10

# ========================================
# CONFIGURAÇÕES DE EXPORTAÇÃO
# ========================================
EXPORT_CSV_ENABLED=true
EXPORT_EXCEL_ENABLED=true
EXPORT_PDF_ENABLED=true

# ========================================
# CONFIGURAÇÕES DE PAGINAÇÃO
# ========================================
PAGINATION_ITEMS_PER_PAGE=10
PAGINATION_MAX_ITEMS_PER_PAGE=100

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ========================================
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_EMAIL_ENABLED=false
NOTIFICATIONS_BROWSER_ENABLED=true 